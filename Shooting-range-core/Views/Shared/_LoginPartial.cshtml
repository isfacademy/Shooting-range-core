@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="HomeMenu navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("SuperAdmin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-lightblue" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @User.Identity.Name</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-lightblue" href="#" title="Manage"> @User.Identity.Name</a>
                </li>
            }
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="nav-link logout btn-link text-lightblue">Logout</button>
                </form>
            </li>
        }
        @*else
        {
            <li class="nav-item">
                <a class="nav-link text-lightblue" asp-controller="Account" asp-action="Login">Login</a>
            </li>
        }*@
        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("SuperAdmin"))
            {
                <li class="nav-item">
                    <a class="nav-link LogoutLink" asp-controller="Administration" asp-action="ListOfRoles">Administration </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-lightblue" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
            }
        }

    </ul>
